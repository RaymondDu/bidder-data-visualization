@import '/usr/local/lib/node_modules/jeet/stylus/jeet/index'


html
	font-family 'helvetica neue'
	font-color #666

.clearfix
	clear both

li
#title
	padding-left 20px
	padding-right 20px

h1
h2
h3
	font-family avenir

h1
	font-size 20pt
	font-weight 800
	margin 40px 0
	span
		font-size 10pt
		font-weight normal

h2
	color #fff
	font-size 13pt
	padding 40px 0 0px 20px

h3
	font-size 12pt
	font-weight 800
	margin-top 10px
	color #666

a 
	color inherit
	text-decoration none

hr
	border none
	border-top 1px solid #999
	margin-bottom 30px
	width 75%

main
	center(100%)
	#side_nav
		float left
		display block
		col(2/10)
		background #000
		height 1000px
		border-right 10px solid #FF9933
		img
			width 90%
		ul
			margin-top 20px
		li
			color #a2a2a2
			padding 20px
			transition all 200ms
			-webkit-transition all 200ms
		.selected
			background #666564
			color #fff
	#summary
		margin 0
		background #E3E2E5
		div
			col(1/3, gutter: 0)
			padding 0 0 30px 0
			text-align center
			.big_stat
				font-size 30pt
				color #1F9AA2 
	#content
		display inline-block
		col(7/10)
		padding-top 20px
		#cookie
			li
				display inline-block
				border 1px solid black
				font-size 10pt
				padding 5px
				background #ff9933
		#chart
			border 1px solid #999




